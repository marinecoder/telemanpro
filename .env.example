# Sample environment configuration
# Copy this file to .env and modify the values as needed

# Database configuration
DB_HOST=localhost
DB_NAME=telegram_manager
DB_USER=telemanpro
DB_PASSWORD=your_password_here
DB_PORT=3306

# Telegram API configuration
TELEGRAM_API_LAYER=mtproto
TELEGRAM_SESSION_TYPE=string
TELEGRAM_CONNECTION_RETRIES=3
TELEGRAM_CONNECTION_TIMEOUT=30

# Scraper settings
SCRAPER_MAX_BATCH_SIZE=1000
SCRAPER_BATCH_DELAY=10
SCRAPER_ACCOUNT_COOLDOWN=30
SCRAPER_MODE=safe

# Adder settings
ADDER_MAX_ADDS_PER_DAY=40
ADDER_ADD_DELAY=60
ADDER_ACCOUNT_COOLDOWN=24

# API server settings
API_HOST=127.0.0.1
API_PORT=5000
API_DEBUG=false
API_SECRET_KEY=change_this_to_a_random_string

# Web interface settings
WEB_SESSION_TIMEOUT=60
WEB_REQUIRE_2FA=false
